acl lan {
  {% for ip in local_ips -%}
  {{ ip }};
  {% endfor -%}
};

options {
        directory "/var/cache/bind";

        forwarders {
            {% for ip in forwarders -%}
            {{ ip }};
            {% endfor -%}
        };
        allow-query { lan; };
        dnssec-validation no;
};

statistics-channels {
  inet 127.0.0.1 port 8053 allow { 127.0.0.1; };
};

key "dns_update_key" {
  algorithm hmac-sha256;
  secret "{{ dns_update_key }}";
};

key "dns_transfer_key" { 
  algorithm hmac-sha256;
  secret "{{ dns_transfer_key }}";
};
