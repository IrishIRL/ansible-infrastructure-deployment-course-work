$TTL	604800
{{ domain_name }}.{{ root_name }}.	IN	SOA	IrishIRL-1.{{ domain_name }}.{{ root_name }}. irishirl.{{ domain_name }}.{{ root_name }}. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;
{% for vm in groups['dns_servers'] %}
{{ domain_name }}.{{ root_name }}.        IN      NS      {{ vm }}
{% endfor %}
{% for vm in groups['all'] %}
{{ vm }} IN A {{hostvars[vm]['ansible_default_ipv4']['address']}}
backup.{{ domain_name }}.{{ root_name }}. IN A {{ backup_host }}
{% endfor %}
