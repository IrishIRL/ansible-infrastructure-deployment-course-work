{% if inventory_hostname != mysql_host -%}
37 0 * * *  backup mysqldump agama > /home/backup/mysql/agama.sql
27 1 * * 0  backup  duplicity --no-encryption full /home/backup/mysql/ rsync://{{ git_user }}@backup.{{ domain_name }}.{{ root_name }}//home/{{ git_user }}/mysql
27 1 * * 1-6  backup  duplicity --no-encryption incremental /home/backup/mysql/ rsync://{{ git_user }}@backup.{{ domain_name }}.{{ root_name }}//home/{{ git_user }}/mysql
{% endif -%}
